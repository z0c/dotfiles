# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors 		= true
	interval 	= 3
	color_good      = '#5F819D'
	color_degraded  = '#ccdc90'
	color_bad       = '#e89393'
}

order += "volume master"
order += "wireless _first_"
order += "battery all"
order += "cpu_usage"
order += "load"
order += "cpu_temperature 1"
order += "disk /"
order += "tztime local"

wireless _first_ {
        format_up = " W:%essid%quality"
        format_down = " W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
	format = " %status %percentage %remaining"
    	status_chr = "charging"
    	status_bat = "battery"
    	status_full = "full"
	format_down = ""
	last_full_capacity = true
	integer_battery_capacity = true
	low_threshold = 11
	threshold_type = percentage
	hide_seconds = true
}

tztime local {
        format = " %A, %e %B %H:%M:%S"
}

load {
        format = " load: %1min"
}

cpu_usage {
	format = "cpu %usage %"
}

cpu_temperature 1 {
	format = " %degreesÂ°"
}

disk "/" {
        format = " %avail"
}

volume master {
	format 		= "vol %volume"
	format_muted 	= "vol ."
	device 		= "default"
	mixer 		= "Master"
	mixer_idx 	= 0
}
