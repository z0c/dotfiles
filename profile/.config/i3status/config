# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors 		    = true
	interval 	    = 5
	color_good      = '#90a959'
	color_degraded  = '#f4bf75'
	color_bad       = '#ac4142'
}

order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "disk /"
order += "tztime local"

wireless _first_ {
    format_up = " W:%essid%quality "
    format_down = " W: down "
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up   = " E: %speed "
    format_down = " E: down "
}

battery all {
	format                      = " %status %percentage %remaining "
    status_chr                  = "charging"
    status_bat                  = "battery"
    status_full                 = "full"
	format_down                 = ""
	last_full_capacity          = true
	integer_battery_capacity    = true
	low_threshold               = 11
	threshold_type              = percentage
	hide_seconds                = true
}

tztime local {
    format = " %A, %e %B %H:%M:%S"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

load {
    format = " load: %1min "
}

cpu_usage {
	format = " cpu %usage %"
}

cpu_temperature 1 {
	format = " %degrees°C "
}

disk "/" {
    format = " %avail "
}

volume master {
	format 		    = "vol %volume "
	format_muted    = "vol - "
	device 		    = "default"
	mixer 		    = "Master"
    mixer_idx   	= 0
}
